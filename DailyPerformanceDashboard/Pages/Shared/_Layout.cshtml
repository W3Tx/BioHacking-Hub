<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BiohackingHub</title>

    <!-- Icons & Styles -->
    <link rel="stylesheet" href="https://unpkg.com/lucide-static@latest/font/lucide.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>

    <!-- Mobile Navbar (unter 992px) -->
    <nav class="navbar bg-white d-lg-none shadow-sm sticky-top" role="navigation">
        <div class="container-fluid">
            <button class="btn" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebarOffcanvas" aria-label="Menü öffnen">
                <i class="lucide lucide-menu" style="font-size: 2em;"></i>
            </button>
            <span class="navbar-brand ms-2 fw-semibold">BiohackingHub</span>
        </div>
    </nav>

    <!-- Offcanvas Sidebar (Mobile) -->
    <div class="offcanvas offcanvas-start" tabindex="-1" id="sidebarOffcanvas" aria-labelledby="sidebarLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title fw-semibold" id="sidebarLabel">Menü</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Schließen"></button>
        </div>
        <div class="offcanvas-body">
            <nav class="sidebar-nav">
                <a class="nav-link @(Context.Request.Path == "/Dashboard" ? "active" : "")" asp-page="/Dashboard">Dashboard</a>
                <a class="nav-link @(Context.Request.Path == "/DailyInput" ? "active" : "")" asp-page="/DailyInput">Eintragen</a>
            </nav>
        </div>
    </div>

    <!-- Desktop Sidebar (ab 992px) -->
    <div class="desktop-sidebar">
        <div class="logo d-flex align-items-center mb-4">
            <img src="https://placehold.co/34x34" alt="Logo" class="rounded-2 me-2" width="34" height="34" />
            <span class="fw-bold">BiohackingHub</span>
        </div>
        <nav class="sidebar-nav">
            <a class="nav-link @(Context.Request.Path == "/Dashboard" ? "active" : "")" asp-page="/Dashboard">Dashboard</a>
            <a class="nav-link @(Context.Request.Path == "/DailyInput" ? "active" : "")" asp-page="/DailyInput">Eintragen</a>
        </nav>
    </div>

    <!-- Hauptinhalt -->
    <main class="main-content">
        <div class="content-wrapper">
            @RenderBody()
        </div>
    </main>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
